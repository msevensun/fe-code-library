/*swiper Title*/
.swiper-title{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 40rpx;
  text-align: center;
  color: #fff;
  font-size: 14px;
}

/*模拟面板指示点*/
.swiper-container{
  position: relative;
  height: 150px;
}
.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 20rpx;
  display: flex;
  justify-content: center;
}
.swiper-container .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #fff;
  border-radius: 8rpx;
  transition: all .6s;
}
.swiper-container .dots .dot.active{
  width: 24rpx;
  background: #f80;
}

